<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameTxt"
            android:text="이름 입력 필요"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <Button
        android:id="@+id/nameInputBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름 입력하러 가기"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/phoneNumTxt"
            android:text="폰번 입력 필요"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <Button
        android:id="@+id/phoneNumInputBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="폰번 입력하러 가기"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/phoneNumDialBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="폰번 전화 다이얼 화면"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/phoneCallBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="바로 전화 연결"/>

</LinearLayout>